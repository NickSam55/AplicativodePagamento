<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".geracao_de_referencia"
    android:background="@drawable/imetro">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo"
                android:text="Referência de pagamento"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="191dp"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/curso_input"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_quadrado"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:text="Curso"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="274dp"
                tools:ignore="MissingConstraints" />


            <EditText
                android:id="@+id/turno_input"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_quadrado"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:text="Turno"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="339dp"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/numero_matricula_gerar_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/input_quadrado"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:text="Número de matricula"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="412dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/gerar_referencia_input"
                android:layout_width="343dp"
                android:layout_height="51dp"
                android:background="@drawable/input_quadrado"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/archivo"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Gerar Referência"
                android:textColor="#4B9BE3"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="497dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/gerar_referencia_aba_input"
                android:layout_width="159dp"
                android:layout_height="115dp"
                android:background="#00000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/gerar_referencia"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="54dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>